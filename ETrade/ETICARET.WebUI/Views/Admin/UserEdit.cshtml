@model AdminUserModel
@{
    ViewData["Title"] = "UserEdit";
}

<h1>UserEdit</h1>
<hr />

<form asp-controller="Admin" asp-action="UserEdit">
    <input type="hidden" name="Email" value="@Model.Email" />
    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsAdmin" class="control-label"></label>
        <input class="form-check-input" type="checkbox" name="IsAdmin" checked=@(Model.IsAdmin==true?true:false) />      
        <span asp-validation-for="IsAdmin" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmailConfirmed" class="control-label"></label>
        <input class="form-check-input" type="checkbox" name="EmailConfirmed" checked=@(Model.EmailConfirmed==true?true:false) />
        <span asp-validation-for="EmailConfirmed" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Save User" class="btn btn-primary" />
    </div>
</form>
