@model ProductModel
@{
    ViewData["Title"] = "CreateProduct";
}
@section Scripts{
    <script src="~/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/modules/ckeditor/ckeditor.js"></script>

    <script>
        CKEDITOR.replace("editor");
    </script>
}
 

<h1>CreateProduct</h1>
<hr />
<form asp-controller="Admin" asp-action="CreateProduct" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-8">
            <div class="mb-3 col-md-9 offset-md-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="ProductName">
                <span asp-validation-for="Name"></span>
            </div>

            <div class="mb-3 col-md-9 offset-md-3">
                <label  class="form-label">Image</label>               
                <input type="file" name="files" value="" multiple/>
             
            </div>
            <div class="mb-3 col-md-9 offset-md-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea id="editor" class="form-control" asp-for="Description" placeholder="Description"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="mb-3 col-md-9 offset-md-3">
                <label asp-for="Price" class="form-label"></label>
                <input class="form-control" asp-for="Price" placeholder="Price">
                <span asp-validation-for="Price"></span>
            </div>
            <div class="mb-3 col-md-9 offset-md-3">
                <button type="submit" class="btn btn-primary">Save Product</button>
            </div>
        </div>
      
    </div>

</form>

