@model CategoryListModel
@{
    ViewData["Title"] = "CategoryList";
}


<h1>Admin Categories</h1>
<hr />
@if (Model.Categories.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col" style="width:30px;">Id</th>
                <th scope="col" style="width:100px;">Name</th>
                <th scope="col" style="width:150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                   
                    <td>@item.Name</td>                   
                    <td>
                        <a class="btn btn-warning btn-sm mr-2" href="/admin/categories/@item.Id">Edit</a>
                        @*<a class="btn btn-danger btn-sm" href="#">Delete</a>*@

                        <form action="/admin/deletecategory" method="post" style="display:inline">
                            <input type="hidden" name="categoryId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Categories</h4>
    </div>
}